{
	"name": "ruby-book",
	"displayName": "RubyBook",
	"description": "A simple Jupyter-like notebook for Ruby code",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.66.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:ruby-book.helloWorld",
		"onNotebook:ruby-book"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "ruby-book.helloWorld",
				"title": "Hello World"
			}
		],
		"notebooks": [
			{
				"id": "ruby-book",
				"type": "ruby-book",
				"displayName": "RubyBook",
				"selector": [
					{
						"filenamePattern": "*.rubybook"
					}
				]
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "^14.18.18",
		"@types/vscode": "^1.67.0",
		"@typescript-eslint/eslint-plugin": "^5.21.0",
		"@typescript-eslint/parser": "^5.21.0",
		"@vscode/test-electron": "^2.1.3",
		"eslint": "^8.14.0",
		"glob": "^8.0.1",
		"mocha": "^9.2.2",
		"ts-loader": "^9.2.8",
		"typescript": "^4.6.4",
		"webpack": "^5.70.0",
		"webpack-cli": "^4.9.2"
	},
	"dependencies": {
		"async-wait-until": "^2.0.12"
	}
}
