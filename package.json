{
	"name": "ruby-book",
	"displayName": "RubyBook",
	"description": "RubyBook is a VSCode extension that provides a notebook interface for Ruby code.",
	"version": "1.0.0",
	"engines": {
		"vscode": "^1.66.0"
	},
	"publisher": "Raj Shah",
  "repository": {
    "url": "https://github.com/rajshah11/ruby-book"
  },
	"categories": [
		"Notebooks"
	],
	"icon": "./docs/images/rubybook.png",
	"activationEvents": [
		"onCommand:ruby-book.newNotebook",
		"onNotebook:ruby-book"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
      {
        "command": "ruby-book.newNotebook",
        "title": "Create a new blank RubyBook",
        "shortTitle": "RubyBook",
        "category": "RubyBook"
      }
    ],
    "menus": {
      "file/newFile": [
        {
          "command": "ruby-book.newNotebook",
          "group": "notebook"
        }
      ]
    },
		"notebooks": [
			{
				"id": "ruby-book",
				"type": "ruby-book",
				"displayName": "RubyBook",
				"selector": [
					{
						"filenamePattern": "*.rubybook"
					}
				]
			}
		],
		"languages": [
      {
        "id": "ruby-book",
				"extensions": [
					".rubybook"
				],
        "aliases": [
          "RubyBook", "rubybook"
        ]
      }
    ]
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "^14.18.18",
		"@types/vscode": "^1.67.0",
		"@typescript-eslint/eslint-plugin": "^5.21.0",
		"@typescript-eslint/parser": "^5.21.0",
		"@vscode/test-electron": "^2.1.3",
		"eslint": "^8.14.0",
		"glob": "^8.0.1",
		"mocha": "^9.2.2",
		"ts-loader": "^9.2.8",
		"typescript": "^4.6.4",
		"webpack": "^5.70.0",
		"webpack-cli": "^4.9.2"
	},
	"dependencies": {
		"async-wait-until": "^2.0.12"
	}
}
